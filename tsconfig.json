{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true
    },
    "include": ["./src/**/*"]
}